.Button
	background Yellow_200
	font-family Lato
	display inline-flex
	align-items center
	justify-content center
	font-weight bold
	border-radius 10px 0 10px 0
	padding-left 10px
	transition .5s
	cursor pointer
	min-height 50px
	min-width 260px
	text-align center
	position relative
	&:focus
		outline none
	i
		margin-left 15px
	&:before
		content ""
		position absolute
		display inline-flex
		height 100%
		width 100%
		background Gradient_Red
		z-index -1
		opacity 0
		top 0
		left 0
		border-radius 10px 0 10px 0
		box-shadow 2px 3px 5px 0px rgba(0,0,0,0.15)
		transition .3s ease-in-out
	&:hover
		i
			animation-name flecha
			animation-duration .8s
			animation-iteration-count infinite
			animation-direction alternate
			animation-fill-mode: forwards
			transition .8s
		&:before
			opacity 1
			top 8px
			left 8px

@keyframes flecha{
	0%{
		transform translateX(0)
	}
	
	100%{		
		transform translateX(5px)
	}	
}
	

.Cursos
