.Fixed_nav
	position fixed
	top -100%
	width 100%
	z-index 1
	border-radius 0
	left 0
	margin-top 0
	background-color Grey_100
	transition 1s ease


.Nav_visible
	top 0%
	transition 1s ease





.Button
	background-color Yellow_200
	font-family Lato
	display inline-flex
	align-items center
	justify-content center
	font-weight bold
	border-radius 10px 0 10px 0
	padding-left 10px
	transition .5s
	cursor pointer
	min-height 50px
	min-width 260px
	text-align center
	position relative
	transition .5s ease-in-out
	&:focus
		outline none
	span
		margin-right 15px
	&:before
		content ""
		position absolute
		display inline-flex
		height 100%
		width 100%
		background-color red
		z-index -1
		opacity 0
		top 5px
		left 5px
		border-radius 10px 0 10px 0
		box-shadow 2px 3px 5px 0px rgba(0,0,0,0.15)
		transition .5s ease-in-out
	&:hover
		&:before
			opacity 1
	

.Cursos
	margin-top -1em
	position relative
	.Curso_group_1
		margin-bottom 2em
	&:before,&:after
		content ""
		width 58%
		height 100%
		position absolute
		display inline-block
		background-color Grey_100
		top 0
		left 0
		z-index -1
	&:after
		left 87%
		transform: skew(40deg)
	&:before
		transform: skew(-135deg)
		left -39%
		

.card
	text-align center
	border 1px solid Grey_200
	border-radius 25px 0 25px 0
	padding 3em 5px
	font-family Lato
	transition .5s ease-in-out
	cursor pointer
	box-shadow 2px 3px 5px 0px rgba(0,0,0,0.15)
	img
		width 100px
		margin 0 auto
	h4
		font-size 24px
		color Grey_500
	p
		font-family Rubik
		font-weight 100
		font-size 16px
		color Grey_400
	a
		color  Grey_500
		text-decoration none
	&:hover
		transform translateY(-15px)
		box-shadow 2px 3px 36px 8px rgba(0,0,0,0.1)
		h4
			color Blue_200
		p
			color Grey_500
		.Cursos_btn
